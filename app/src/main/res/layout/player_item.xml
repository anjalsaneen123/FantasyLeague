
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rank"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kutt"
            android:layout_toRightOf="@+id/rank"
            android:text="."
            android:textStyle="bold"
            android:textSize="16dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/kutt"
            android:text="Anjal Saneen"
            android:textStyle="bold"
            android:textSize="16dp"/>


    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/total_point"
        android:layout_alignParentRight="true"
        android:text="4566"
        android:textStyle="bold"
        android:textSize="16dp"/>


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/team_name_"
        android:layout_below="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Team Name = "/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/team_name"
        android:layout_toRightOf="@+id/team_name_"
        android:layout_below="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12345"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/date_"
        android:layout_below="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="GW Score     = "/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/date"
        android:layout_toRightOf="@+id/date_"
        android:layout_below="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="12345"/>
    <View
        android:layout_below="@id/date"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1px"
        android:background="#c0c0c0"/>

</RelativeLayout>